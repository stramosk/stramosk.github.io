          <div class="terminal-header mb-4">
            FILTER BY CATEGORY
          </div>
          <div class="flex flex-wrap gap-2 justify-center">
            {['All', 'Chaos Theory', 'Fractals'].map((category) => (
              <button
                class="px-4 py-2 bg-white/20 border border-white/30 text-white hover:bg-white/30 transition-colors rounded"
              >
                {category}
              </button>
            ))}
          </div>
        </div>
      </div>

