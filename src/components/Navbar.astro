---
const navItems = [
  { href: '/', label: 'HOME' },
  { href: '/math', label: 'MATH' },
  { href: '/contact', label: 'CONTACT' }
];
---

<nav class="navbar-fixed w-full bg-black/95 backdrop-blur-md border-b border-white/20 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-white hover:text-gray-300 transition-colors command-prompt">
          <span class="text-white">$</span> stramosk
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-gray-300 transition-colors relative group terminal-text"
          >
            {item.label}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white transition-all group-hover:w-full"></span>
          </a>
        ))}
      </div>

      <!-- Profile Avatar -->
      <div class="hidden md:flex items-center">
        <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-white/30 hover:border-white/50 transition-colors">
          <img 
            src="/images/vini2.png" 
            alt="Stramosk Profile" 
            class="w-full h-full object-cover"
            onerror="this.style.display='none'"
          />
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button
          id="mobile-menu-button"
          class="text-white hover:text-gray-300 p-2"
        >
          <div class="w-6 h-6 flex flex-col justify-center items-center">
            <span class="w-5 h-0.5 bg-white transition-all" id="hamburger-line-1"></span>
            <span class="w-5 h-0.5 bg-white transition-all mt-1" id="hamburger-line-2"></span>
            <span class="w-5 h-0.5 bg-white transition-all mt-1" id="hamburger-line-3"></span>
          </div>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden overflow-hidden bg-black/95 border-t border-white/20" style="height: 0; opacity: 0;">
      <div class="py-4 space-y-2">
        <!-- Mobile Profile Avatar -->
        <div class="px-4 py-3 border-b border-white/20">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-white/30">
              <img 
                src="/images/vini2.png" 
                alt="Stramosk Profile" 
                class="w-full h-full object-cover"
                onerror="this.style.display='none'"
              />
            </div>
            <div class="text-white">
              <div class="font-semibold">Stramosk</div>
              <div class="text-sm text-gray-300">Software Engineer</div>
            </div>
          </div>
        </div>
        
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-4 py-2 text-white hover:text-gray-300 hover:bg-white/10 transition-colors terminal-text"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>

</nav>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const line1 = document.getElementById('hamburger-line-1');
  const line2 = document.getElementById('hamburger-line-2');
  const line3 = document.getElementById('hamburger-line-3');

  let isMenuOpen = false;

  mobileMenuButton?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      mobileMenu!.style.height = 'auto';
      mobileMenu!.style.opacity = '1';
      line1!.classList.add('rotate-45', 'translate-y-1');
      line2!.style.opacity = '0';
      line3!.classList.add('-rotate-45', '-translate-y-1');
    } else {
      mobileMenu!.style.height = '0';
      mobileMenu!.style.opacity = '0';
      line1!.classList.remove('rotate-45', 'translate-y-1');
      line2!.style.opacity = '1';
      line3!.classList.remove('-rotate-45', '-translate-y-1');
    }
  });
</script>
